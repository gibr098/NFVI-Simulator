# Configuration file of a NFVISimulator

#NFVI-PoP CONSTRUCTION PARAMETERS: /--------------------------

#DataCenter(number of Servers)
number_of_servers = 10

#Server's resources :
RAM(GB) = 32
CPU(Cores) = 16
CPU(speed_in_GHz) = 2.20
Storage(GB) = 64
Network(interfaces) = 16

#Number of VM per Server
virtual_machines = 2

#Number of container per VM
containers = 4

#Server's computational capacity needed by the container:
container_cpu(%) = 20

#Container's resources needed:
C-RAM(GB) = 4
C-CPU(Cores) = 2
C-CPU(speed_in_GHz) = 2.20
C-Storage(GB) = 8
C-Network(interfaces) = 2

#Queue Policy(FIFO, EDF, SJF, RR)
#FIFO: First In First Out
#SDF: Shortest Duration First
Queue_policy = FIFO

#Allocation Policy(FA, R-A)
#FA: First Available
#R-A: Random Allocation
Allocation_policy = FA


#SIMULATION PARAMETERS: /--------------------------

#Duration of the simulation
time_of_simulation = 100

#Rate of requests arrival
lambda = 1.2

#Max request size
max_size = 3

#Zipf exponent
alfa = 2.0

#Range of Service duration
min_duration = 15
max_duration = 20

#Range of Service number of VNF
min_vnf = 4
max_vnf = 7

#Probability of a free server crash
server_crash = 0.0


#COSTS /----------------------

# CPU: euro per core hour
cpu_cost = 0.003

# RAM : euro per GB hour
ram_cost = 0.013

# Storage: euro per GB hour
storage_cost = 0.00001

# Energy: euro/kWh
energy_cost = 0.08

# Renewable energy
renewable_energy = 0.0